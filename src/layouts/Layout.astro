---
import Footer from "../components/Footer.astro";
import "@fontsource-variable/montserrat";


const { title, description, url = Astro.url  } = Astro.props;
---

<!doctype html>
<html class="bg-cream" lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="application-name" content="Plan Your Next Date" />
    <meta
      name="keywords"
      content="actividades para parejas en Santiago, citas románticas Santiago, planes románticos Chile, escapadas románticas Santiago, experiencias únicas Chile, diversión con amigos Santiago, ideas para citas Santiago, Plan Your Next Date Santiago, Plan Your Next Date Chile, Plan Your Next Date"
    />

    <meta
      property="og:image"
      content="https://planyournextdate.xyz/favicon/favicon-32x32.png"
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:site_name" content="Plan Your Next Date" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />

    <meta name="robots" content="index, follow" />
    <!--
      <meta name="googlebot" content="index, follow" />
    -->
    <meta
      name="google-site-verification"
      content="vflthyvgzV_DQ7T_EE5qHtFUixDnY4fA3vFYz3Ts-mc"
    />
    <link rel="canonical" href={url} />
    <link rel="manifest" href="/manifest.json" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="msapplication-config" content="/browserconfig.xml" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#c2185b" />
    <!--
      <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
      <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
      <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
      <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#c2185b" />
      <meta name="msapplication-TileColor" content="#c2185b" />
      <meta name="msapplication-TileImage" content="/mstile-144x144.png" />
    -->
  </head>
  <body class="flex flex-col min-h-screen min-w-[344px] w-full m-0 p-0">
    <section class="py-8 md:pl-16 pl-14 bg-[#c2185b]">
      <a href="/" class="flex flex-row">
        <img
          src="/favicon.webp"
          width="82"
          height="82"
          alt="Plan Your Next Date"
        />
        <div class="relative">
          <h1 class="absolute w-44 text-xl font-bold text-white left-3 top-7">
            PLAN YOURN <br /> NEXT DATE
          </h1>
        </div>
      </a>
    </section>
    <main class="flex flex-col items-center justify-center flex-1">
      <slot />
    </main>
    <Footer />
  </body>

