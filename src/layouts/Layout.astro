---
import Footer from "../components/Footer.astro";
import '@fontsource-variable/montserrat';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="bg-cream" lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen w-full m-0 p-0">
    <section class="w-full py-8 bg-[#333333]">
      <h1 class="sm:text-4xl text-3xl font-bold text-center text-white m-2">
        Â¡Plan your next date!
      </h1>
      <p class="text-md text-center text-gray-200 m-2">
        Generador de panoramas aleatorios
      </p>
    </section>
    <main class="my-auto">
      <slot />
    </main>
    <Footer />
  </body>
</html>
