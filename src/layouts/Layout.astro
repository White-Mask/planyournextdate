---
import Footer from "../components/Footer.astro";
import "@fontsource-variable/montserrat";


const { title, description, image, url = Astro.url  } = Astro.props;
---

<!doctype html>
<html class="bg-cream" lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="application-name" content="Plan Your Next Date" />
    <meta
      name="keywords"
      content="actividades para parejas en Santiago, citas románticas Santiago, planes románticos Chile, escapadas románticas Santiago, experiencias únicas Chile, diversión con amigos Santiago, ideas para citas Santiago, Plan Your Next Date Santiago, Plan Your Next Date Chile, Plan Your Next Date"
    />

    <meta
      property="og:image"
      content="https://planyournextdate.xyz/favicon/favicon-32x32.png"
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:site_name" content="Plan Your Next Date" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:image" content={image} />

    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={url} />
    <!--
      <meta name="googlebot" content="index, follow" />
      
    -->
    <meta
      name="google-site-verification"
      content="vflthyvgzV_DQ7T_EE5qHtFUixDnY4fA3vFYz3Ts-mc"
    />
    <link rel="manifest" href="/manifest.json" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="msapplication-config" content="/browserconfig.xml" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#c2185b" />
    <!--
      <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
      <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
      <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
      <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#c2185b" />
      <meta name="msapplication-TileColor" content="#c2185b" />
      <meta name="msapplication-TileImage" content="/mstile-144x144.png" />
    -->
  </head>
  <body class="min-w-[344px] w-full min-h-screen flex flex-col m-0 p-0">
    <section id="container-banner" class="w-full flex justify-center items-center bg-[#c2185b] h-[120px]">
      <div class="w-full lg:w-[80%] flex justify-center lg:justify-start items-center ">
        <a href="/" class="flex w-full max-w-[258px] flex-row items-end justify-center gap-2">
          <img
            src="/favicon.webp"
            width="82"
            height="82"
            alt="Plan Your Next Date"
          />
          <h1 class="text-xl w-34 font-bold text-white">
            PLAN YOUR <br /> NEXT DATE
          </h1>
        </a>
      </div>
    </section>
    <main class="flex flex-col items-center">
      <slot />
    </main>
    <Footer />
  </body>

  <!--
    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js').then(() => {
        }).catch((error) => {
          console.error('Error al registrar el Service Worker:', error);
        });
      }
    </script>
  -->
</html>
<style is:global>
  :root {
  }
  html {
    font-family: "Montserrat Variable", system-ui, sans-serif;
  }
</style>
